<div class='title'>
  <h3><%= @article.title %></h3>
</div>

<div class='arti-body'>
<%= markdown(@article.body) %>
</div>

<p class='date'>
  <%= @article.created_at %>
</p>



<%= link_to 'Back' , articles_path %>
<% if current_user%> 
  <%= link_to 'Edit', edit_article_path(@article), class:'button' %>
  <%= link_to 'Delete', article_path(@article), method: :delete, data:{confirm: "Are you sure?"},class:'button' %>
<%end%>


<h2><%=@article.comments.count%> Comments</h2>
<%= render @article.comments%> 
<h3><%= @article.user.email %></h3>
<h2>ADD A Comment</h2>
<%= render 'comments/form'%> 