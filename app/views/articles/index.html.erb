  
<div class= row>
  <% if current_user%>
    <div class="post-btn ">
      <%= link_to "New Post", new_article_path %>
    </div>
  <%end%>
  <% @articles.each do |article|%>
    
    <div class="arti-date">
      <div class = 'date'> <%=article.created_at.strftime ('%B, %d, %Y')%> </div>
    </div>


    <div class="arti-frame ">
      <div class="arti-title">
        <div class = 'title'> 
          <p>
            <%= link_to article.title, article %>
          </p> 
        </div>
      </div>
        
      <div class="arti-content">
        <div class="arti-content-body">
          <%= markdown(article.body) %>
        </div>
       
      </div>
        
      <div class= "arti-pic">
      
        <% article.covers.each do |cover| %>
          <%= image_tag cover.variant(resize: '800x550') %>
        <% end %>

        <% if article.title?%>
         <form action="/file-upload"
                class="dropzone"
                id="my-awesome-dropzone">
         </form>
        <%end%>
      </div>

    <div class= "arti-foot">
      <div class= "arti-read">
        <%= link_to "read" , article_path(article), class:' read-bt'%>
      </div> 

      <div class= "arti-tag">
       <%= link_to "#RoR" , article_path(article), class:' tag-tag'%>
       <%= link_to "#tag" , article_path(article), class:' tag-tag'%>
      </div> 
    </div> 


  </div> 
    
  
    <%end%>
    
</div>
