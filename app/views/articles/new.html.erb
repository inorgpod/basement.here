 <h1>New Post</h1>

<div class="well">
  <%= form_for :article, url: articles_path do |f|%>
    <% if @article.errors.any? %>
      <div id="errors">
        <h2> <%= pluralize(@article.errors.count, "error")%> prevented this post from saving</h2>
        <ul> 
          <% @article.errors.full_messages.each do |msg|%>
