      <%= f.text_field :name, class:'form-control', placeholder:'Title'%>
    </p>
    

    <p>

      <%= f.text_area :body,class:'form-control', placeholder:'Say Somthing ...', rows:'3' %>


    </p>

    <p>
      <%= f.submit'Post' %>
    </p>
  
  <%end%>